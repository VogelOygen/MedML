<Window x:Class="MedML.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedML"
        xmlns:views="clr-namespace:MedML.View"
        mc:Ignorable="d"
        Title="MedML - Анализ сердечных заболеваний" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="10">
            <TextBlock x:Name="UsernameLabel" Text="" VerticalAlignment="Center"/>
            <Button Content="Выход" Padding="10,5" HorizontalAlignment="Right" DockPanel.Dock="Right" Click="LogoutButton_Click"/>
        </DockPanel>
        <TabControl x:Name="MainTabControl" Grid.Row="1">
            <TabItem x:Name="TabData" Header="Данные">
                <views:DataView/>
            </TabItem>
            <TabItem x:Name="TabDashboard" Header="Дашборд">
                <views:DashboardView/>
            </TabItem>
            <TabItem x:Name="TabEda" Header="EDA Анализ">
                <views:EdaView/>
            </TabItem>
            <TabItem x:Name="TabForecast" Header="Прогноз">
                <views:ForecastView/>
            </TabItem>
            <TabItem x:Name="TabLearn" Header="Обучение модели">
                <views:LearnModelView/>
            </TabItem>
            <TabItem x:Name="TabUsers" Header="Пользователи" Visibility="Collapsed"/>
        </TabControl>
    </Grid>
</Window>
