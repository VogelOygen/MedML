<UserControl x:Class="MedML.View.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="ToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Grid Width="46" Height="24">
                                <Border x:Name="Track" 
                                        Background="{TemplateBinding Background}" 
                                        CornerRadius="12" 
                                        BorderBrush="#BDBDBD"
                                        BorderThickness="1"/>
                                <Ellipse x:Name="Thumb" 
                                         Width="20" Height="20" 
                                         Fill="White" 
                                         HorizontalAlignment="Left" 
                                         Margin="2">
                                    <Ellipse.Effect>
                                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Grid>
                            <ContentPresenter Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="#2196F3"/>
                                <Setter TargetName="Track" Property="BorderBrush" Value="#2196F3"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Track" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Просмотр данных" 
                       FontSize="24" 
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>
            <Button Content="Обновить" 
                    Padding="10,5"
                    Click="RefreshButton_Click"/>
            <CheckBox x:Name="DbSourceCheckBox" 
                      Content="Режим базы данных" 
                      Style="{StaticResource ToggleSwitchStyle}"
                      VerticalAlignment="Center" 
                      Margin="20,0,0,0"
                      Checked="OnDataSourceChanged"
                      Unchecked="OnDataSourceChanged"/>
            <Button x:Name="ExportButton"
                    Content="Экспорт в CSV" 
                    Padding="10,5"
                    Margin="20,0,0,0"
                    Visibility="Collapsed"
                    Click="ExportButton_Click"/>
            
            <StackPanel x:Name="CrudButtons" Orientation="Horizontal" Visibility="Collapsed">
                <Button Content="Добавить" Padding="10,5" Margin="20,0,0,0" Click="AddButton_Click"/>
                <Button Content="Редактировать" Padding="10,5" Margin="10,0,0,0" Click="EditButton_Click"/>
                <Button Content="Удалить" Padding="10,5" Margin="10,0,0,0" Click="DeleteButton_Click"/>
            </StackPanel>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  x:Name="DataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  AlternatingRowBackground="AliceBlue"
                  GridLinesVisibility="All"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Возраст" Binding="{Binding Path=Age}" Width="Auto"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding Path=Sex}" Width="Auto"/>
                <DataGridTextColumn Header="Тип боли в груди" Binding="{Binding Path=ChestPainType}" Width="Auto"/>
                <DataGridTextColumn Header="Давление в покое" Binding="{Binding Path=RestingBP}" Width="Auto"/>
                <DataGridTextColumn Header="Холестерин" Binding="{Binding Path=Cholesterol}" Width="Auto"/>
                <DataGridTextColumn Header="Уровень сахара" Binding="{Binding Path=FastingBS}" Width="Auto"/>
                <DataGridTextColumn Header="ЭКГ в покое" Binding="{Binding Path=RestingECG}" Width="Auto"/>
                <DataGridTextColumn Header="Макс. пульс" Binding="{Binding Path=MaxHR}" Width="Auto"/>
                <DataGridTextColumn Header="Стенокардия" Binding="{Binding Path=ExerciseAngina}" Width="Auto"/>
                <DataGridTextColumn Header="Депрессия ST" Binding="{Binding Path=Oldpeak}" Width="Auto"/>
                <DataGridTextColumn Header="Наклон ST" Binding="{Binding Path=ST_Slope}" Width="Auto"/>
                <DataGridTextColumn Header="Заболевание" Binding="{Binding Path=HeartDisease}" Width="Auto">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="Content" Value="Есть">
                                    <Setter Property="Background" Value="#FFEBEE"/>
                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                </Trigger>
                                <Trigger Property="Content" Value="Нет">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl> 
