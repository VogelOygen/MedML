<UserControl x:Class="MedML.View.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Данные из CSV файла" 
                       FontSize="24" 
                       VerticalAlignment="Center"
                       Margin="0,0,20,0"/>
            <Button Content="Обновить CSV" 
                    Padding="10,5"
                    Click="RefreshButton_Click"/>
        </StackPanel>

        <DataGrid Grid.Row="1" 
                  x:Name="DataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Margin="10"
                  AlternatingRowBackground="AliceBlue"
                  GridLinesVisibility="All"
                  CanUserSortColumns="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Возраст" Binding="{Binding Path=Age}" Width="Auto"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding Path=Sex}" Width="Auto"/>
                <DataGridTextColumn Header="Тип боли в груди" Binding="{Binding Path=ChestPainType}" Width="Auto"/>
                <DataGridTextColumn Header="Давление в покое" Binding="{Binding Path=RestingBP}" Width="Auto"/>
                <DataGridTextColumn Header="Холестерин" Binding="{Binding Path=Cholesterol}" Width="Auto"/>
                <DataGridTextColumn Header="Уровень сахара" Binding="{Binding Path=FastingBS}" Width="Auto"/>
                <DataGridTextColumn Header="ЭКГ в покое" Binding="{Binding Path=RestingECG}" Width="Auto"/>
                <DataGridTextColumn Header="Макс. пульс" Binding="{Binding Path=MaxHR}" Width="Auto"/>
                <DataGridTextColumn Header="Стенокардия" Binding="{Binding Path=ExerciseAngina}" Width="Auto"/>
                <DataGridTextColumn Header="Депрессия ST" Binding="{Binding Path=Oldpeak}" Width="Auto"/>
                <DataGridTextColumn Header="Наклон ST" Binding="{Binding Path=ST_Slope}" Width="Auto"/>
                <DataGridTextColumn Header="Заболевание" Binding="{Binding Path=HeartDisease}" Width="Auto">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="Content" Value="Есть">
                                    <Setter Property="Background" Value="#FFEBEE"/>
                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                </Trigger>
                                <Trigger Property="Content" Value="Нет">
                                    <Setter Property="Background" Value="#E8F5E9"/>
                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl> 