<Window x:Class="MedML.View.RecordEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор записи" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Grid.Row="0">
                <TextBlock Text="Возраст:" Margin="0,5,0,0"/>
                <TextBox x:Name="AgeTextBox" Margin="0,0,0,5" PreviewTextInput="IntegerTextBox_PreviewTextInput" ToolTip="Допустимо: 18–100"/>

                <TextBlock Text="Пол:" Margin="0,5,0,0"/>
                <ComboBox x:Name="SexComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="M"/>
                    <ComboBoxItem Content="F"/>
                </ComboBox>

                <TextBlock Text="Тип боли в груди:" Margin="0,5,0,0"/>
                <ComboBox x:Name="ChestPainTypeComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="ATA"/>
                    <ComboBoxItem Content="NAP"/>
                    <ComboBoxItem Content="ASY"/>
                    <ComboBoxItem Content="TA"/>
                </ComboBox>

                <TextBlock Text="Давление в покое (RestingBP):" Margin="0,5,0,0"/>
                <TextBox x:Name="RestingBPTextBox" Margin="0,0,0,5" PreviewTextInput="IntegerTextBox_PreviewTextInput" ToolTip="Допустимо: 60–200"/>

                <TextBlock Text="Холестерин (Cholesterol):" Margin="0,5,0,0"/>
                <TextBox x:Name="CholesterolTextBox" Margin="0,0,0,5" PreviewTextInput="IntegerTextBox_PreviewTextInput" ToolTip="Допустимо: 100–600"/>

                <TextBlock Text="Сахар в крови (FastingBS):" Margin="0,5,0,0"/>
                <ComboBox x:Name="FastingBSComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="0 (&lt;= 120 mg/dl)"/>
                    <ComboBoxItem Content="1 (> 120 mg/dl)"/>
                </ComboBox>

                <TextBlock Text="ЭКГ в покое (RestingECG):" Margin="0,5,0,0"/>
                <ComboBox x:Name="RestingECGComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="Normal"/>
                    <ComboBoxItem Content="ST"/>
                    <ComboBoxItem Content="LVH"/>
                </ComboBox>

                <TextBlock Text="Макс. пульс (MaxHR):" Margin="0,5,0,0"/>
                <TextBox x:Name="MaxHRTextBox" Margin="0,0,0,5" PreviewTextInput="IntegerTextBox_PreviewTextInput" ToolTip="Допустимо: 60–220"/>

                <TextBlock Text="Стенокардия (ExerciseAngina):" Margin="0,5,0,0"/>
                <ComboBox x:Name="ExerciseAnginaComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="N"/>
                    <ComboBoxItem Content="Y"/>
                </ComboBox>

                <TextBlock Text="Депрессия ST (Oldpeak):" Margin="0,5,0,0"/>
                <TextBox x:Name="OldpeakTextBox" Margin="0,0,0,5" PreviewTextInput="FloatTextBox_PreviewTextInput" ToolTip="Допустимо: 0.0–10.0"/>

                <TextBlock Text="Наклон ST (ST_Slope):" Margin="0,5,0,0"/>
                <ComboBox x:Name="STSlopeComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="Up"/>
                    <ComboBoxItem Content="Flat"/>
                    <ComboBoxItem Content="Down"/>
                </ComboBox>

                <TextBlock Text="Заболевание сердца (HeartDisease):" Margin="0,5,0,0"/>
                <ComboBox x:Name="HeartDiseaseComboBox" Margin="0,0,0,5">
                    <ComboBoxItem Content="0 (Нет)"/>
                    <ComboBoxItem Content="1 (Есть)"/>
                </ComboBox>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
