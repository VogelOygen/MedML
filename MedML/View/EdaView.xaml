<UserControl x:Class="MedML.View.EdaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vm="clr-namespace:MedML.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <vm:EdaViewModel x:Key="Vm"/>
    </UserControl.Resources>

    <Grid DataContext="{StaticResource Vm}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Разведочный анализ данных (EDA)" 
                   FontSize="24" 
                   Margin="20,10"
                   HorizontalAlignment="Center"/>

        <!-- Filters -->
        <Border Grid.Row="0" VerticalAlignment="Bottom" Margin="20,0,20,10" Padding="10" Background="#F5F5F5" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Фильтр по полу:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding SexOptions}" 
                          SelectedItem="{Binding SelectedSex}"
                          Width="100" Margin="0,0,20,0"/>

                <TextBlock Text="Статус заболевания:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox ItemsSource="{Binding DiseaseOptions}" 
                          SelectedItem="{Binding SelectedDiseaseStatus}"
                          Width="150" Margin="0,0,20,0"/>

                <TextBlock Text="Возраст от:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Text="{Binding MinAge, UpdateSourceTrigger=PropertyChanged}" 
                         Width="50" Margin="0,0,10,0" VerticalAlignment="Center"/>
                <TextBlock Text="до:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Text="{Binding MaxAge, UpdateSourceTrigger=PropertyChanged}" 
                         Width="50" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Scatter Plot: Age vs MaxHR -->
        <Border Grid.Row="1" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Зависимость максимального пульса от возраста (Цвет: Болезнь)" 
                           FontSize="16" 
                           Margin="10,5"
                           HorizontalAlignment="Center"/>
                <lvc:CartesianChart Grid.Row="1" 
                                   Series="{Binding ScatterSeries}"
                                   XAxes="{Binding ScatterXAxes}"
                                   YAxes="{Binding ScatterYAxes}"
                                   ZoomMode="Both"
                                   TooltipPosition="Center"
                                   Margin="10"/>
            </Grid>
        </Border>

        <!-- Bottom Row Charts -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cholesterol Histogram -->
            <Border Grid.Column="0" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Распределение уровня холестерина" 
                               FontSize="16" 
                               Margin="10,5"
                               HorizontalAlignment="Center"/>
                    <lvc:CartesianChart Grid.Row="1" 
                                       Series="{Binding CholesterolSeries}"
                                       XAxes="{Binding CholesterolXAxes}"
                                       YAxes="{Binding CholesterolYAxes}"
                                       ZoomMode="X"
                                       Margin="10"/>
                </Grid>
            </Border>

            <!-- BP by Chest Pain -->
            <Border Grid.Column="1" Margin="10" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Среднее давление по типу боли в груди" 
                               FontSize="16" 
                               Margin="10,5"
                               HorizontalAlignment="Center"/>
                    <lvc:CartesianChart Grid.Row="1" 
                                       Series="{Binding BpByPainSeries}"
                                       XAxes="{Binding BpByPainXAxes}"
                                       YAxes="{Binding BpByPainYAxes}"
                                       ZoomMode="X"
                                       Margin="10"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
