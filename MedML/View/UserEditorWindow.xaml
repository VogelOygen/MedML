<Window x:Class="MedML.View.UserEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактор пользователя" Height="260" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Логин" Margin="0,5,0,0"/>
            <TextBox x:Name="UsernameTextBox"/>
            <TextBlock Text="Пароль (оставьте пустым, если не менять)" Margin="0,5,0,0"/>
            <PasswordBox x:Name="PasswordBox"/>
            <TextBlock Text="Роль" Margin="0,5,0,0"/>
            <ComboBox x:Name="RoleComboBox">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Client"/>
            </ComboBox>
            <CheckBox x:Name="IsActiveCheckBox" Content="Активен" Margin="0,10,0,0"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="100" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Отмена" Width="100" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
